        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-prettier": "3.4.0",
        "eslint-plugin-react": "7.22.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "eslint-plugin-testing-library": "4.6.0",
        "gh-pages": "3.2.0",
        "jest": "26.6.3",
        "node-sass": "6.0.0",
